<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_margin="3dp"
    android:layout_height="match_parent"
    tools:context=".Message.MessageActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/message_toolbar"/>

    <View
        android:id="@+id/view_layout_bottom"
        android:layout_width="match_parent"
        android:layout_above="@id/layout_send"
        android:background="@color/black_light"
        android:layout_height="0.1dp"/>
    <View
        android:id="@+id/view_layout_above"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_message"
        android:background="@color/black_light"
        android:layout_height="0.1dp"/>
<ScrollView
    android:id="@+id/layout_message"
    android:layout_marginTop="7dp"
    android:layout_width="match_parent"
    android:layout_below="@+id/toolbar_message"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_message"
        android:padding="3dp"
        android:layout_margin="2dp"
        android:layout_below="@id/toolbar_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>


</ScrollView>


    <RelativeLayout
        android:id="@+id/layout_send"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="7dp"
        android:background="@color/white"
        android:layout_marginLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_camera"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="13dp"
            android:src="@drawable/ic_camera"
            android:tint="@color/blue1" />

        <ImageView
            android:id="@+id/image_picture"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dp"
            android:tint="@color/blue1"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/image_camera"
            android:src="@drawable/icons_picture" />

        <ImageView
            android:id="@+id/image_mic"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dp"
            android:tint="@color/blue1"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/image_picture"
            android:src="@drawable/ic_mic" />

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="6dp"
            android:tint="@color/blue1"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_like" />
        <ImageView
            android:id="@+id/image_send"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="6dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:tint="@color/blue1"
            android:src="@drawable/ic_send" />
        <EditText
            android:id="@+id/input_message"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="9dp"
            android:layout_toLeftOf="@id/image_icon"
            android:layout_toRightOf="@id/image_mic"
            android:background="@drawable/round_corner_gray_18"
            android:drawableRight="@drawable/ic_smile"
            android:hint="Aa"
            android:drawableTint="@color/blue1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

    </RelativeLayout>

</RelativeLayout>


</RelativeLayout>