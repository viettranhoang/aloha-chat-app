<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_back"
            android:tint="@color/blue"
            android:layout_height="35dp" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@drawable/ic_flying_butterfly"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_weight="3.5"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_hello"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_margin="8dp"
            android:text="Let's Start" />


        <EditText
            android:id="@+id/input_email"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tv_type_background"
            android:hint="trungndptit@gmail.com"
            android:inputType="textPersonName"
            android:padding="3dp"
            android:layout_margin="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tv_type_background"
            android:hint="trungndptit@gmail.com"
            android:inputType="textPersonName"
            android:padding="3dp"
            android:layout_margin="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/tv_type_background"
            android:ems="10"
            android:hint="********"
            android:padding="3dp"
            android:layout_margin="8dp"
            android:inputType="textPassword"
            android:textColor="@color/black" />


        <EditText
            android:id="@+id/input_cofirm_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/tv_type_background"
            android:ems="10"
            android:hint="********"
            android:padding="3dp"
            android:layout_margin="8dp"
            android:inputType="textPassword"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/button_register"
            android:background="@drawable/round_conner_login_email_lightblue"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textColor="#FFF"
            android:textSize="22sp"
            android:text="Register"
            android:padding="3dp"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</LinearLayout>
